                            <items>
                                <MenuItem onAction="#menu_debug_err" text="Throw an exception" />
                                <MenuItem onAction="#menu_debug_close_editors" text="Force close all editors" />
                                <MenuItem onAction="#menu_debug_show_editors" text="Show all editors" />
                                <MenuItem onAction="#menu_debug_restart_bgpool" text="Restart background worker threads" />
                                <MenuItem onAction="#menu_debug_dirty" text="Mark current editor as dirty" />
                                <MenuItem onAction="#menu_debug_reset_config" text="Reset config registry" />
                            </items>
                        </Menu>
                        <Menu text="Project">
                            <items>
                                <MenuItem onAction="#menu_debug_showcache" text="Show Project File Cache Entries" />
                                <MenuItem onAction="#menu_debug_clearcache" text="Clear file cache" />
                                <MenuItem onAction="#menu_debug_showserial" text="Show and Copy Project Serial Version" />
                                <MenuItem onAction="#menu_debug_reset_projprefs" text="Reset preferences registry" />
                            </items>
                        </Menu>
                    </items>
                </Menu>
                <MenuItem onAction="#menu_soft_restart" text="Soft Restart..." />
                <MenuItem onAction="#menu_exit" text="Exit" />
            </items>
        </Menu>
        <Menu text="Project">
            <items>
                <MenuItem onAction="#menu_project_showInFinder" text="Open in Finder" />
                <MenuItem onAction="#menu_project_close" text="Close Project" />
                <Menu text="[inop] Backups">
                    <items>
                        <MenuItem text="Backup now" />
                        <MenuItem text="Restore backup..." />
                        <MenuItem text="Revert changes made this session..." />
                    </items>
                </Menu>
                <Menu text="[inop] Open Recent" />
                <SeparatorMenuItem />
                <MenuItem onAction="#menu_project_projprefs" text="Registry..." />
                <MenuItem onAction="#menu_project_dellogs" text="Delete logs" />
            </items>
        </Menu>
        <Menu text="Editor">
            <items>
                <MenuItem onAction="#menu_edit_undo" text="Undo" />
                <MenuItem onAction="#menu_edit_redo" text="Redo" />
                <SeparatorMenuItem />
                <MenuItem text="[inop] Cut" />
                <MenuItem text="[inop] Copy" />
                <MenuItem text="[inop] Paste" />
                <MenuItem text="[inop] Delete" />
                <SeparatorMenuItem />
                <MenuItem text="[inop] Select All" />
                <MenuItem text="[inop] Unselect All" />
                <SeparatorMenuItem />
                <MenuItem onAction="#menu_file_save" text="Save" />
                <MenuItem onAction="#menu_file_revert" text="Revert unsaved changes" />
            </items>
        </Menu>
        <Menu text="Tools">
            <items>
                <MenuItem onAction="#menu_window_isolation" text="Standalone edit mode" />
                <Menu text="Live Server">
                    <items>
                        <CheckMenuItem fx:id="tglServer" onAction="#menu_server_toggle" text="Enable debug server" />
                        <SeparatorMenuItem />
                        <CheckMenuItem onAction="#menu_server_tglauto" selected="true" text="Toggle auto-refresh" />
                    </items>
                </Menu>
                <Menu text="Git">
                    <items>
                        <MenuItem text="[inop] Publish changes..." />
                        <MenuItem text="[inop] Update project..." />
                        <MenuItem text="[inop] Branches..." />
                        <MenuItem text="[inop] Delete changes..." />
                    </items>
                </Menu>
            </items>
            <MenuItem onAction="#menu_tools_validate_prefabs" text="Validate prefabs" />
        </Menu>
        <Menu text="View">
            <items>
                <CheckMenuItem fx:id="tglShowBottomDock" onAction="#menu_view_showbottomdock" selected="true" text="Show bottom dock" />
                <MenuItem onAction="#menu_window_closeeditors" text="Close all open editors" />
                <MenuItem onAction="#menu_window_resetdocks" text="Reset docks" />
                <MenuItem onAction="#menu_window_fs" text="Toggle Fullscreen" />

            </items>
        </Menu>
        <Menu text="Spotify">
            <items>
                <MenuItem onAction="#menu_spotify_nowplaying" text="Now Playing" />
                <SeparatorMenuItem />
                <MenuItem onAction="#menu_spotify_next" text="Next" />
                <MenuItem onAction="#menu_spotify_previous" text="Previous" />
                <SeparatorMenuItem />
                <MenuItem onAction="#menu_spotify_pause" text="Pause" />
                <MenuItem onAction="#menu_spotify_play" text="Play" />
                <SeparatorMenuItem />
                <MenuItem onAction="#menu_spotify_connect" text="Connect" />
                <MenuItem onAction="#menu_spotify_help" text="Help" />
                <SeparatorMenuItem />
                <MenuItem onAction="#menu_spotify_deletedata" text="Delete data" />
