<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<MenuBar fx:id="MenuBar" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jdngray77.htmldesigner.frontend.MenuBarController">

    <menus>
        <Menu text="HTML Designer">
            <items>
                <MenuItem onAction="#menu_debug_run_anything" text="Run a Task..." />
                <MenuItem onAction="#menu_registry" text="Registry..." />
                <MenuItem onAction="#menu_keybinds" text="Keybindings..." />
                <Menu text="Debug">
                    <items>
                        <MenuItem onAction="#menu_debug_eval" text="Evaluate..." />
